# AgentX Runtime Configuration Example
# Copy this file to .env and fill in your values

# ============================================
# REQUIRED: Claude API Configuration
# ============================================
ANTHROPIC_API_KEY=sk-ant-api03-your-key-here

# ============================================
# Optional: Model Configuration
# ============================================
# Default model to use (default: claude-3-5-sonnet-20241022)
AGENTX_MODEL=claude-3-5-sonnet-20241022

# Maximum tokens for responses (default: 4096)
AGENTX_MAX_TOKENS=4096

# Temperature for generation (0-2, default: 1.0)
AGENTX_TEMPERATURE=1.0

# ============================================
# Optional: Database Configuration
# ============================================
# SQLite database URL (default: sqlite:///agentx_sessions.db)
AGENTX_DATABASE_URL=sqlite:///agentx_sessions.db

# Database connection pool size (default: 5)
AGENTX_DB_POOL_SIZE=5

# Database max overflow (default: 10)
AGENTX_DB_MAX_OVERFLOW=10

# ============================================
# Optional: MCP Server Configuration
# ============================================
# Path to JSON file with MCP server configurations
# AGENTX_MCP_SERVERS_FILE=./mcp_servers.json

# ============================================
# Optional: WebSocket Configuration
# ============================================
# WebSocket heartbeat interval in seconds (default: 30)
AGENTX_WEBSOCKET_HEARTBEAT=30

# WebSocket timeout in seconds (default: 300)
AGENTX_WEBSOCKET_TIMEOUT=300

# ============================================
# Optional: Performance Configuration
# ============================================
# Event queue maximum size (default: 1000)
AGENTX_EVENT_QUEUE_MAXSIZE=1000

# Message load page size (default: 100)
AGENTX_MESSAGE_LOAD_PAGE_SIZE=100

# Tool call timeout in seconds (default: 120)
AGENTX_TOOL_TIMEOUT=120

# ============================================
# Optional: Debugging Configuration
# ============================================
# Enable event logging to database (default: false)
AGENTX_ENABLE_EVENT_LOGGING=false

# Log level: DEBUG, INFO, WARNING, ERROR (default: INFO)
AGENTX_LOG_LEVEL=INFO

# MCP protocol log level (default: INFO)
AGENTX_MCP_LOG_LEVEL=INFO
